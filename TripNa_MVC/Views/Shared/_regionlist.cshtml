@model IEnumerable<TripNa_MVC.Models.Restaurant>
<link href="/lib/jquery/dist/jquery.min.js" rel="stylesheet" />



@if (ViewData["NoResult"] != null)
{
    <div class="nullresult">@ViewData["NoResult"]</div>
}
else if (ViewData["FilteredCount"] != null)
{
	<div>共有 @ViewData["FilteredCount"] 項結果</div>
}
else
{
    <div>共有 @ViewData["SearchCount"] 項結果</div>
    @* <div>總共有 @ViewData["TotalCount"] 條記錄</div> *@
}
<br />
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var restaurant in Model)
    {
        string img = @restaurant.RestaurantName + ".jpg";
        <div class="col">
            <div class="card" style="width:24rem;height:400px;  box-shadow: 0 3px 10px rgb(0,0,0,.2);">

                @* <img src="~/images/美食/@img" class="img-fluid h-100 rounded-start" alt="Alternate Text" height:100px; style="max-height:250px; position:relative;" />  *@

                <div class="img-container">
					<img src="~/images/美食/@img" class="img-fluid  rounded-start" alt="Alternate Text" style="height:250px;max-height:250px;width:100%; position:relative;object-fit: cover;" />
                    <div class="overlay">
                        <span class="zoom-icon">&#128269;</span>
                    </div>
                </div>


				@* <div class="img-container">
					<img src="@Model" class="img-fluid rounded-start img-zoom" alt="Alternate Text" style="height:250px;max-height:250px;width:100%; position:relative;" />
