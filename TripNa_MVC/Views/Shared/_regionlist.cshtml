					<span class="close-btn">&times;</span>
				</div>
 *@



				<p style="background-color:#f5565b;color:white;padding:4px;text-align:center;border-radius:2px;position:absolute;bottom:38%;font-weight:600;margin-left:5px;font-size:.9rem;">@restaurant.FoodType</p>
				<div class="card-body" style="overflow:auto;">
                    <span class="heart-icon align-self-end">&#10084;</span>
                    <h5 class="card-title">@Html.DisplayFor(modelItem => restaurant.LocationName)</h5>
                    <h5 class="card-title" style="font-weight:800;">@restaurant.RestaurantName</h5>
                    <p class="card-text">@restaurant.Description</p>
                    <p class="card-text">地址:@restaurant.Address<br />電話:@restaurant.Phone</p>
                    
                </div>
            </div>
        </div>
    }
</div>

 

