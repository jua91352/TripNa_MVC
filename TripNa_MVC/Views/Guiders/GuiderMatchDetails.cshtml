    function setAction(action) {
    document.getElementById('formAction').value = action;
}


    function confirmOrder(button, action, orderId, guideId, memberId) {
    if (confirm(`導遊${guideId}您確定要${action === 'reject' ? '婉拒' : '接單'}訂單 ${orderId} 嗎? ${memberId}`)) {
        fetch(`/Guiders/GuiderMatchDetails`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({ orderId, guideId, memberId, action })
        })
        .then(response => response.json())
        .then(data => {
            alert(data);
            window.location.reload();
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
}
















