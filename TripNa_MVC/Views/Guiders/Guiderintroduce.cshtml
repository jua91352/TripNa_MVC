                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= ratingAvg)
                    {
                        <span class="rank-rated" data-rating="@i">&#128970;</span>
                    }
                    else if (ratingAvg >= i - 0.5)
                    {
