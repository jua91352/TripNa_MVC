                    else
                    {
                    <span class="rank-not-rated" data-rating="@i">&#128970;</span>
                    }
                }
            </span>

            <span style="color: #a2a2a2;">(@ratingCount)</span>
        <br>
       





            <span class="bi bi-trophy" style="color: #a2a2a2; font-size: 15px;">@(orderCount)次雇用</span>



        <br>
        <span>
            性別:@(g.GuiderGender == "F" ? "女" : "男")
            <br>
            服務年資:@CalculateExperience(g.GuiderStartDate)
            <br>
