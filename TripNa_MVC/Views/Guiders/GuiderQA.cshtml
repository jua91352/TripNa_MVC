    int spotCount = 0;
    int currentDay = 1; // 記錄當前天數
    bool isNewOrder = true; // 標記是否為新訂單
    string previousItineraryName = string.Empty; // 記錄上一個訂單的行程名稱
    var displayedDays = new HashSet<string>(); // 記錄已顯示過的天數
}

<br>
<br>
<br>
