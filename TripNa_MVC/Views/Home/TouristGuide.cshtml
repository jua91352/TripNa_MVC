@model IEnumerable<TripNa_MVC.Models.Guider>
@{
    ViewData["Title"] = "TouristGuide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!--自訂-->
    <link rel="stylesheet" href="~/css/TouristGuide.css">
</head>
@functions {
    public static string CalculateExperience(DateTime startDate)
    {
        DateTime currentDate = DateTime.Now;
        TimeSpan experience = currentDate - startDate;

        int years = experience.Days / 365;
        int months = (experience.Days % 365) / 30;

        if (years > 0)
        {
            return $"{years}年";
        }
        else if (months > 0)
        {
            return $"{months}個月";
        }
        else
        {
            return "新手導遊";
        }
    }
}
<style>
    .fixed-btn-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        width: auto;
    }

    .fixed-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

        .fixed-btn:hover {
            background-color: #0056b3;
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }
</style>

<div class="nav-center" id="標題" style="color:#e3e5f4; background-color:#4e5482; font-size: 36px;">
    我們為您推薦的導遊
</div>

<div class="row justify-content-center" style="width: 100%;" id="select">
    <div class="col-auto">
        <select class="form-select" id="gender" onchange="filterGuiders()">
            <option value="">性別</option>
            <option value="男生">男生</option>
            <option value="女生">女生</option>
            <option value="">不限</option>
        </select>
    </div>
    <!-- 評價 -->
    <div class="col-auto">
        <select class="form-select" id="rating" onchange="filterGuiders()">
            <option value="">評價</option>
            <option value="5">5星</option>
            <option value="4">4星</option>
            <option value="3">3星</option>
        </select>
    </div>
    <!-- 服務經驗 -->
    <div class="col-auto">
        <select class="form-select" id="experience" onchange="filterGuiders()">
            <option value="">服務年資</option>
            <option value="0">0年 (新手導遊)</option>
            <option value="1">1年</option>
            <option value="2">2年</option>
            <option value="3">3年</option>
            <option value="4">4年</option>
            <option value="5">5年以上</option>
        </select>
    </div>
</div>

<br>

<div class="row">
    <div class="col-4"></div>
    <p class="col-4 text-center">搜尋結果共有 @ViewBag.GuiderCount 筆</p>
    <div class="col-4"></div>
</div>

<br>

<div id="card-container">
    @foreach (var guider in Model)
    {
        string imgPath = "~/導遊/大頭照/" + guider.GuiderNickname + ".jpg";

        <div style="width: 60%; margin: 0 auto;" id="card">
            <div style="display: flex; flex-direction: row; justify-content: center; align-items: center; margin: 1rem; padding: 1rem; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); position: relative;">
                <img src="@Url.Content(imgPath)" alt="@guider.GuiderId" style="height: auto; width: 150px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.2s, box-shadow 0.2s; cursor: pointer;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 8px 12px rgba(0, 0, 0, 0.2)';" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 6px rgba(0, 0, 0, 0.1)';">
                <p style="margin-left: 1rem;" class="card-text col-7">
                    姓名:@guider.GuiderNickname<br>
                    性別:@guider.GuiderGender<br>
                    服務年資:@CalculateExperience(guider.GuiderStartDate)<br>
                    地區:@guider.GuiderArea<br>
                    簡介:@guider.GuiderIntro<br>
                </p>
                123
                <input type="checkbox" style="margin: 0.5rem; padding: 0.5rem; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); position: absolute; bottom: 0; right: 0;" class="form-check-input" onclick="selectGuider('@guider.GuiderId', this.checked)">
            </div>
        </div>
    }
</div>
<br>
<div class="fixed-btn-container" id="fixed-btn-container">
    <button class="fixed-btn" onclick="placeOrder()">下單去</button>
</div>
<br>

<script>
    // 篩選
    function filterGuiders() {
        var gender = document.getElementById("gender").value;
        var experience = document.getElementById("experience").value;

        var url = "@Url.Action("TouristGuide", "Home")";
        var params = [];
        if (gender) {
            params.push("gender=" + gender);
        }
        if (experience) {
            params.push("experience=" + experience);
        }
        if (params.length > 0) {
            url += "?" + params.join("&");
        }
        window.location.href = url;
    }

    // 下單
    function placeOrder() {
        alert("下單要把會員訂單跟選多少導遊都送到SelectGuider資料表");
    }

    // 滾動偵測
    window.onscroll = function () {
        adjustButtonPosition();
    };

    function adjustButtonPosition() {
        var fixedBtnContainer = document.getElementById('fixed-btn-container');
        var scrollPosition = window.scrollY || document.documentElement.scrollTop;
        var triggerPosition = document.getElementById('card-container').offsetTop + document.getElementById('card-container').offsetHeight;

        if (scrollPosition + window.innerHeight > triggerPosition) {
            fixedBtnContainer.style.position = 'absolute';
            fixedBtnContainer.style.bottom = '20px';
            fixedBtnContainer.style.right = '20px';
            fixedBtnContainer.style.top = triggerPosition + 'px';
        } else {
            fixedBtnContainer.style.position = 'fixed';
            fixedBtnContainer.style.bottom = '20px';
            fixedBtnContainer.style.right = '20px';
            fixedBtnContainer.style.top = 'auto';
        }
    }
</script>
